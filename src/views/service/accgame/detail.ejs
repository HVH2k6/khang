<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
  rel="stylesheet"
/>
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
  crossorigin="anonymous"
/>

<div class="container py-5">
  <div class="row">
    <!-- Product Images -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <img
          src="<%= accgame.image %>"
          class="card-img-top"
          alt="Product Image"
          id="main-image"
        />
        <div class="card-body">
          <div class="position-relative">
            <!-- Nút prev/next -->
            <button
              class="btn btn-light position-absolute start-0 top-50 translate-middle-y prev-thumb"
            >
              <i class="fas fa-chevron-left"></i>
            </button>
            <button
              class="btn btn-light position-absolute end-0 top-50 translate-middle-y next-thumb"
            >
              <i class="fas fa-chevron-right"></i>
            </button>

            <!-- Dãy ảnh ngang -->
            <div
              class="d-flex flex-nowrap overflow-auto px-3 list_image align-items-center"
            >
              <% if(accgame.list_image.length > 0){ %> <%
              accgame.list_image.forEach(item => { %>
              <div class="card border-0 me-3" style="min-width: 100px">
                <img
                  src="<%= item %>"
                  class="img-thumbnail sub-image"
                  alt="Thumbnail"
                />
              </div>
              <% }); %> <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Product Details -->
    <div class="col-md-6">
      <h1 class="h2 mb-3"><%= accgame.name %></h1>
      <div class="mb-3">
        <span class="h4 me-2 format-number"><%= accgame.price %> VNĐ</span>

        <span class="badge bg-danger ms-2"><%= accgame.category_name %></span>
      </div>

      <div class="mb-4 description-content"><%- accgame.description %></div>

      <!-- Quantity -->
    

      <!-- Actions -->
      <div class="d-grid gap-2">
        

        <button class="btn btn-outline-secondary" type="button">
          <i class="far fa-heart me-2"></i>Tư vấn
        </button>
      </div>
    </div>
  </div>
</div>
<style>
  list_image {
    scroll-behavior: smooth;
    padding-top: 10px;
    padding-bottom: 10px;
  }

  .sub-image {
    cursor: pointer;
    height: 120px;
    width: 120px;
    object-fit: cover;
    border-radius: 6px;
    transition: transform 0.2s ease;
  }

  .sub-image:hover {
    transform: scale(1.05);
    border: 2px solid #007bff;
  }

  .prev-thumb,
  .next-thumb {
    background: rgba(255, 255, 255, 0.95);
    border: none;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
    width: 35px;
    height: 35px;
    z-index: 10;
  }
</style>
