<header id="heading" class="">
  <nav class="heading">
    <div class="container c-container header-container">
      <div class="box-logo">
        <a href="/">
          <img
            src="//cdn3.upanh.info/upload/server-sw3/images/180%20-%20Cuoq%20-%2003_07_2024%20-%20Logo%20Campagin%20T6%20Shopbacgau.png"
            alt="logo-shop"
            class="d-lg-block d-none"
          />
          <img
            src="//cdn3.upanh.info/upload/server-sw3/images/180%20-%20Cuoq%20-%2003_07_2024%20-%20Logo%20Campagin%20T6%20Shopbacgau.png"
            alt="logo-shop-mob"
            class="d-lg-none"
          />
        </a>
      </div>
      <div class="box-search d-none d-lg-block">
        <form class="form-search" id="formSearchHeader" action="/tim-kiem" method="GET">
          <input
            type="search"
            name="q"
            placeholder="Tìm kiếm"
            class="has-submit"
            id="search-header-input"
          />
          <button type="submit" id="btnSearch" title="Tìm kiếm"></button>
        </form>
        
      </div>
     
      <div class="d-flex user-info-header">
        <% if(user){ %>
        <a
          class="btn primary handle-recharge-modal pl-xl-4 pr-xl-4 pl-sm-1 pr-sm-1 c-ml-16 c-mr-16 d-none d-lg-block"
          href="/thanh-toan/nap-tien"
          >Nạp tiền</a
        >
        <% }%>
        <div class="box-search_mobile d-lg-none" style="display: none">
          <div class="box-notify-1">
            <div class="box-icon brs-8">
              <img src="/assets/image/nam/search.svg" alt="search" />
            </div>
          </div>
        </div>
      
        <div class="box-notify d-flex">
          <div class="box-icon brs-8" data-notity="">
            <img src="/assets/image/nam/ring.svg" alt="ring" />
            <p id="num-notification" class="d-none">0</p>
          </div>
          <div class="notify_menu notify_active position-absolute brs-12">
            <div class="notify_header d-flex justify-content-between c-p-16">
              <div class="fw-700 fz-20 lh-28 title-color">Thông báo</div>
              <img
                src="/assets/image/nam/profile_close.svg"
                alt="profile_close"
                class="close-notification-popup c-mr-12"
              />
            </div>
          </div>
          <% if(user){ %>
          <div class="user-info">
            <div class="">
              <strong><%=user.username%></strong>
              <span id="user-asset">Số dư <%=user.asset%> VNĐ</span>
            </div>
            <div class="dropdown">
              <img
                src="<%=user.avatar%>"
                alt=""
                id="dropdownMenuButton"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
                class="custom-avt img-profile rounded-circle dropdown-toggle"
              />

              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/thanh-toan/lich-su-nap-tien"
                  >Lich sử nạp</a
                >
                <a class="dropdown-item" href="/don-hang/lich-su-mua"
                  >Lịch sử mua key</a
                >
                <a class="dropdown-item" href="/phong-chat">Phòng chat</a>

                <a class="dropdown-item" href="#">Lịch sử mua acc</a>
                <a class="dropdown-item" href="#">Thông tin cá nhân</a>
                <a class="dropdown-item" href="#">Rút tiền</a>
                <% if(user.roleId == 2){ %>
                <a href="/dang-ky-ban-acc" class="dropdown-item"
                  >Đăng ký bán acc</a
                >
                <% } %> <% if(user.roleId == 1 || user.roleId == 3){ %>
                <a class="dropdown-item" href="/acc-game/dang-acc">Đăng acc</a>
                <a class="dropdown-item" href="/acc-game/quan-ly"
                  >Quản lý acc</a
                >

                <% } %> <% if(user.roleId == 1){ %>
                <a class="dropdown-item" href="/admin/quan-ly">Quản lý</a>
                <% } %>
                <a class="dropdown-item" href="/tai-khoan/dang-xuat"
                  >Dăng xuất</a
                >
              </div>
            </div>
          </div>
          <% }else{ %>
          <a
            class="btn primary handle-recharge-modal pl-xl-4 pr-xl-4 pl-sm-1 pr-sm-1 c-ml-16 c-mr-16 d-none d-lg-block"
            data-toggle="modal"
            data-target="#exampleModal"
            >Đăng nhập</a
          >
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>

