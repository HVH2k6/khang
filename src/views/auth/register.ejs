<div class="welcome-page">
  <div class="uk-width-expand@m page-first-screen">
    <div class="fl-hd-cover"></div>
    
    <div class="form-login">
      <div class="form-login__box">
        <div class="uk-margin uk-text-left"><a href="/">Trang chủ</a></div>
        <div class="uk-heading-line uk-text-center">Đăng ký</div>
        <form action="/tai-khoan/dang-ky" method="post">
          <div class="uk-margin">
            <input
              class="uk-input"
              type="text"
              placeholder="Username"
              name="username"
            />
          </div>
          <div class="uk-margin">
            <input
              class="uk-input"
              type="email"
              placeholder="Email"
              name="email"
            />
          </div>
          <div class="uk-margin uk-position-relative input-password">
            <input
              class="uk-input"
              type="password"
              placeholder="Mật khẩu"
              name="password"
            />
            <i class="fa-solid fa-eye show-password"></i>
          </div>
          <div class="uk-margin">
            <input
              class="uk-input"
              type="tel"
              placeholder="Số điện thoại"
              name="phoneNumber"
            />
          </div>

          <div class="uk-margin">
            <button
              class="uk-button uk-button-danger uk-width-1-1"
              type="submit"
            >
              Đăng ký
            </button>
          </div>
          <div class="uk-text-center">
            <span>Bạn đã có tài khoản?</span
            ><a class="uk-margin-small-left" href="/tai-khoan/dang-nhap"
              >Đăng nhập</a
            >
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
