<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
  crossorigin="anonymous"
/>

<div
  class="modal fade"
  id="modalauthmobile"
  tabindex="-1"
  aria-labelledby="modalauthmobile"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="modalauthmobileTitle">Đăng nhập</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="formLogin" method="post" class="formLoginMobile">
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Nhập email...."
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <div class="password-input-container c-mt-8">
              <input type="password" class="form-control" name="password" />

              <i class="fa-solid fa-eye show-password"></i>
            </div>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <a href="" class="text-primary">Quên mật khẩu</a>
            <span
              >Bạn đã chưa có tài khoản?
              <span class="text-success" id="signUpMobile">
                Đăng ký
              </span></span
            >
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <form id="formRegister" method="post" class="formRegisterMobile d-none">
          <div class="mb-3">
            <label class="form-label">Username</label>
            <input
              type="text"
              class="form-control"
              name="username"
              placeholder="Nhập username...."
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Nhập email...."
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <div class="password-input-container c-mt-8">
              <input type="password" class="form-control" name="password" />

              <i class="fa-solid fa-eye show-password"></i>
            </div>

            <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                <input
                  type="tel"
                  class="form-control"
                  name="phoneNumber"
                  placeholder="Nhập số điện thoại...."
                />
              </div>
          </div>
          <div class="mt-3">
            <span class="d-flex align-items-center"
              >Bạn  chưa có tài khoản?
              <span class="text-success" id="signInMobile">
                Đăng nhập
              </span></span
            >
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
  crossorigin="anonymous"
></script>
<style>
  .password-input-container {
    display: flex;
    align-items: center;
    position: relative;
  }
  .show-password {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
  }
  
</style>
<script>
    const signUpMobile = document.getElementById('signUpMobile');
    const modalauthmobileTitle = document.getElementById('modalauthmobileTitle');
    const signInMobile = document.getElementById('signInMobile');
    const formLogin = document.querySelector('.formLoginMobile')
    const formRegister = document.querySelector('.formRegisterMobile')
  
    signUpMobile.addEventListener('click', () => {
      console.log(" modalauthmobileTitle:", modalauthmobileTitle)
      console.log(" formLogin:", formLogin)
      console.log(" formRegister:", formRegister)
      modalauthmobileTitle.textContent = 'Đăng ký';
      formLogin.classList.add('d-none');
      formRegister.classList.remove('d-none');
    });
  
    signInMobile.addEventListener('click', () => {
      modalauthmobileTitle.textContent = 'Đăng nhập';
      formLogin.classList.remove('d-none');
      formRegister.classList.add('d-none');
    });
  </script>
  